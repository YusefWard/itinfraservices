zone "lux.ttu" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db.lux";
  allow-transfer {
    {{ slave_ip }};
   };
	notify yes;
{% else %}
  type slave;
  file "/var/lib/bind/db.lux";
  masterfile-format text;
  masters {
    {{ master_ip }};
  };
{% endif %}
};

zone "56.168.192.in-addr.arpa" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db.lux.ptr";
  allow-transfer { 
    {{slave_ip}};
   };
{% else %}
  type slave;
  file "/var/lib/bind/db.lux.ptr";
  masterfile-format text;
  masters {
    {{ master_ip }};
  };
{% endif %}
};